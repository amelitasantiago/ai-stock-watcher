# =============================================================================
# The Night's Watch - Environment Variables Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys for Data Sources
# -----------------------------------------------------------------------------

# Alpha Vantage (Stock Data)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# News API (Financial News)
# Get your free key at: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# Twitter/X API (Social Sentiment)
# Get your key at: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Polygon.io (Alternative Market Data)
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# -----------------------------------------------------------------------------
# Alert & Notification Services
# -----------------------------------------------------------------------------

# Twilio (SMS Alerts)
# Sign up at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email Alerts)
# Sign up at: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=alerts@nightswatch.ai

# Firebase Cloud Messaging (Push Notifications)
# Get credentials at: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL Database
DATABASE_URL=postgresql://localhost:5432/nightswatch
DATABASE_USER=nightswatch_user
DATABASE_PASSWORD=your_secure_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Flask/FastAPI Secret Key (Generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_change_this_in_production

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------

# Hugging Face (For FinBERT and other models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Model Storage Path
MODEL_STORAGE_PATH=./models/final

# -----------------------------------------------------------------------------
# Trading Configuration (Optional - For Future Features)
# -----------------------------------------------------------------------------

# Alpaca Trading API (Paper Trading)
# Sign up at: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading endpoint

# Interactive Brokers (For Advanced Users)
IB_GATEWAY_HOST=localhost
IB_GATEWAY_PORT=4001

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------

# Sentry (Error Tracking)
# Sign up at: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics (Optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/Disable Features
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_NEWS_FETCHING=true
ENABLE_SOCIAL_MEDIA_MONITORING=false
ENABLE_EMAIL_ALERTS=true
ENABLE_SMS_ALERTS=false
ENABLE_PUSH_NOTIFICATIONS=false

# -----------------------------------------------------------------------------
# Advanced Settings
# -----------------------------------------------------------------------------

# Data Refresh Interval (seconds)
DATA_REFRESH_INTERVAL=60

# Alert Cooldown Period (seconds) - Prevent alert spam
ALERT_COOLDOWN_PERIOD=300

# Maximum Concurrent Users
MAX_CONCURRENT_USERS=1000

# Backtest Historical Data Days
BACKTEST_DAYS=365

# Default Watchlist Size Limit
MAX_WATCHLIST_SIZE=50
